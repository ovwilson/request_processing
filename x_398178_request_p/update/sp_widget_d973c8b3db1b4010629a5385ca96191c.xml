        <client_script><![CDATA[function($rootScope, $scope, StoreService) {

  var c = this;
	
	$scope.buttons = [];
	
	$scope.onClick = function(button){
		$rootScope.$broadcast('button-click', button);
	}
	
	$rootScope.$on('store', function(evt,data){
		// console.log('ng-button-bar',data)
		$scope.buttons = data.buttons.filter(function(button){
			return button.states.includes(data.state);
		});
	});
	
	$rootScope.$broadcast('get-store');
	
	
}]]></client_script>
