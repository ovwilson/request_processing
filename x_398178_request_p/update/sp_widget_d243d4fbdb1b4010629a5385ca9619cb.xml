        <client_script><![CDATA[function($rootScope, $scope, StoreService) {
  /* widget controller */
  var c = this;
	
	$scope.state = '';
	$scope.model = {};
	$scope.modelGroup = [];
	$scope.tableName = '';
	
	$scope.lookupChange = function(val,name){
		$scope.model[name] = val;
	}
	
	$rootScope.$on('store', function(evt,data){
		$scope.state = data.state;
		$scope.model = data.model;
		$scope.modelGroup = data.modelGroup;
		$scope.tableName = data.tableName;
		console.log('ngForm',data);
	});
	
	$rootScope.$on('get-model', function(evt,data){
		$rootScope.$broadcast('set-store',$scope.model);
	});
	
	$rootScope.$broadcast('get-store');
	
}]]></client_script>
