        <template><![CDATA[
<form name="ngForm">
  
<div ng-repeat="group in modelGroup">
	
  <div class="form-group" ng-if="group.type == 'text' && group.visible">
    <label for="group.name">{{ group.label }}</label>
    <input type="text" ng-model="model[group.name]" class="form-control" id="{{ group.name }}" 
           placeholder="{{ group.label }}" 
           ng-disabled="{{ group.disabled }}">
  </div>
 
  <div class="form-group" ng-if="group.type == 'textarea' && group.visible">
  	<textarea id="group.name" ng-model="model[group.name]" class="form-control" rows="3"></textarea>
  </div>
  
  <div class="form-group" ng-if="group.type == 'select' && group.visible">  
    <p>
      {{ group.label }}
    </p>
    <select id="group.name" ng-model="model[group.name]" class="form-control">
      <option value="New Application">New Application</option>
      <option value="Existing Application">Existing Application</option>
    </select>
  </div>
  
  <div class="form-group" ng-if="group.type == 'lookup' && group.visible">
    <p>
      {{ group.label }}
    </p>
    <sn-record-picker
      id="{{ group.name }}" 
      placeholder="{{ group.label }}" 
      field="Name" 
      table="'sys_user'" 
      display-field="'name'" 
      display-fields="'Name,Email,User ID'" 
      value-field="'name'" 
      search-fields="'name'" page-size="20" 
      default-query=""
      on-change="lookupChange(val, group.name)"></sn-record-picker>
  </div>
  
</div>
  
  
</form>]]></template>
