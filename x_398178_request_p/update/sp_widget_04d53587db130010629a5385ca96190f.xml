        <client_script><![CDATA[function($rootScope, $scope, StoreService) {
  /* widget controller */
  var c = this;
	
	$rootScope.$on('store', function(evt,data){
		$scope.title = data.tableLabel;
		$scope.modelGroup = data.modelGroup.filter(function(group){ return group.visible; });
		$scope.models = data.models;
		$scope.count = data.models.length;
	});
	
	$scope.add = function(){
		$rootScope.$broadcast('button-click',{
			name:'New', label:'New', cls:'primary', states:['new','edit']
		});
	}
	
	$scope.select = function(id){
		$rootScope.$broadcast('record-click',id);
	}

	$rootScope.$broadcast('get-store',{});
	
}]]></client_script>
